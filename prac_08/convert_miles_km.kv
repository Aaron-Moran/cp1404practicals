BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_miles
            text: ''
            font_size: 48
            multiline: False
            on_text: app.handle_convert() # Comment out if the convert button function if desired

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_change(1)

            Button:
                text: 'Down'
                on_press: app.handle_change(-1)

    #Button:
    #    text: 'Convert miles to km'
    #    font_size: 24
    #    on_press: app.handle_convert()

    Label:
        id: output_label
        text: ''
        font_size: 48
        color: (1, 1, 0, 1)